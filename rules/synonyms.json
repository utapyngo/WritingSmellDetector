{
    "ruleset": "Synonyms",
    "type": "re",
    "prefix": "\\b",
    "suffix": "\\b",
    "flags": "I",
    "replace": {
        " ": "\\s+"
    },
    "rules": [
        {
            "name": "For Because / Why",
            "re": [
                "the reason for", "the reason that", "due to the fact that", "owing to the fact that", "in light of the fact that", "considering the fact that", "on the grounds that", "this is why"
            ]
        },
        {
            "name": "For although, even though",
            "re": [
                "despite the fact that", "regardless of the fact that", "nowithstanding the fact that"
            ]
        },
        {
            "name": "For about",
            "re": [
                "as regards", "in reference to", "with regard to", "concerning the matter of", "where \\w+ is concerned"
            ]
        },
        {
            "name": "For may, might, can, could",
            "re": [
                "it is possible that", "there is a chance that", "it could happen that", "the possibility exists for"
            ]
        },
        {
            "name": "For more, less/fewer, better, worse",
            "suffix": "",
            "re": [
                "increase", "decrease"
            ]
        },
        {
            "name": "For must / should",
            "re": [
                "it is crucial that", "it is necessary that", "there is a need", "there is a necessity for", "it is important that", "it is incumbent upon", "cannot be avoided"
            ]
        },
        {
            "name": "For before, after, as",
            "re": [
                "prior to", "in anticipation of", "subsequent to", "following on", "at the same time as", "simultaneously with"
            ]
        },
        {
            "name": "For can",
            "re": [
                "is able to", "in a position to", "has the capacity to", "has the opportunity to", "has the ability to"
            ]
        }
    ]
}
